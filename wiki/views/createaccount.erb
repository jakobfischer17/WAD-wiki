<div class="well well-lg my-well">
   <h3 class="wiki-title">Create account</h3>
   <hr class="dark-hr" />
    <form action="/createaccount" method="post">
     <div class="form-group">
       New Username:
      <input type="text" class="form-control" name="username" placeholder="Please create a username..">
     </div>
     <div class="form-group">
       New Password:
       <input type="password" class="form-control" name="password" placeholder="Please enter a password..">
     </div>
      <input type="submit" class="btn btn-default" value="Create!">
     </form>
</div>

